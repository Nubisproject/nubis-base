{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_account_id": "",
    "aws_x509_cert_path": "",
    "aws_x509_key_path": "",
    "iam_instance_profile": "",
    "release": null,
    "build": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-ebs-us-west-2-ubuntu",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "us-west-2",
    "source_ami": "ami-3d50120d",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-base ebs ubuntu ami-3d50120d v{{user `release`}}.{{user `build`}}",
    "ami_description": "Nubis - Base",
    "ami_regions" : [ "eu-west-1","us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}.{{user `build`}}"
    }
  },
  {
    "type": "amazon-ebs",
    "name": "amazon-ebs-us-west-2-amazon-linux",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "us-west-2",
    "source_ami": "ami-b5a7ea85",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "mozilla nubis-base amazon ebs ami-b5a7ea85 v{{user `release`}}.{{user `build`}}",
    "ami_description": "Nubis - Base",
    "ami_regions" : [ "eu-west-1","us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}.{{user `build`}}"
    }
  },
  {
    "type": "amazon-instance",
    "name": "amazon-instance-us-west-2-ubuntu",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "s3_bucket": "nubis-ami",
    "account_id": "{{user `aws_account_id`}}",
    "x509_cert_path": "{{user `aws_x509_cert_path`}}",
    "x509_key_path": "{{user `aws_x509_key_path`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "us-west-2",
    "source_ami": "ami-3d50120d",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-base ubuntu instance ami-3d50120d v{{user `release`}}.{{user `build`}}",
    "ami_description": "Nubis - Base",
    "ami_regions" : [ "eu-west-1","us-east-1" ],
    "bundle_upload_command": "sudo -i -n ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --batch --location {{.Region}} --retry",
    "tags" : {
       "release": "{{user `release`}}.{{user `build`}}"
    }
  },
  {
    "type": "amazon-instance",
    "name": "amazon-instance-us-west-2-amazon-linux",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "s3_bucket": "nubis-ami",
    "account_id": "{{user `aws_account_id`}}",
    "x509_cert_path": "{{user `aws_x509_cert_path`}}",
    "x509_key_path": "{{user `aws_x509_key_path`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "us-west-2",
    "source_ami": "ami-f5a7eac5",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "mozilla nubis-base amazon instance ami-b5a7ea85 v{{user `release`}}.{{user `build`}}",
    "ami_description": "Nubis - Base",
    "ami_regions" : [ "eu-west-1","us-east-1" ],
    "bundle_vol_command": "sudo -i -n ec2-bundle-vol -k {{.KeyPath}} -u {{.AccountId}} -c {{.CertPath}} -r {{.Architecture}} -e {{.PrivatePath}}/* -d {{.Destination}} -p {{.Prefix}} --batch --no-filter",
    "bundle_upload_command": "sudo -i -n ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --batch --location {{.Region}} --retry",
    "tags" : {
       "release": "{{user `release`}}.{{user `build`}}"
    }
  }
  ],
  "provisioners": [
  {
    "type": "file",
    "source": "nubis/nubis-puppet.tar.gz",
    "destination": "/tmp/nubis-puppet.tar.gz"
  },
  {
    "type": "file",
    "source": "nubis/bin/consul-autojoin.sh",
    "destination": "/tmp/autojoin.sh"
  },
  {
    "type": "shell",
    "script": "nubis/bin/packer-bootstrap"
  },
  {
    "type": "puppet-masterless",
    "manifest_dir": "nubis/puppet",
    "manifest_file": "nubis/puppet/init.pp",
    "module_paths": ["nubis/nubis-puppet"],
    "hiera_config_path": "nubis/nubis-puppet/puppet/hiera.yaml"
    "facter": {
      "nubis_release": "{{user `release`}}",
      "nubis_build":   "{{user `build`}}"
    }
  }
  ]
}
