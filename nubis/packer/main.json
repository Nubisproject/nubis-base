{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "iam_instance_profile": "",
    "release": null,
    "build": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-us-west-2",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "us-west-2",
    "source_ami": "ami-3d50120d",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-base v{{user `release`}}.{{user `build`}}",
    "ami_description": "Nubis - Base",
    "ami_regions" : [ "eu-west-1","us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}.{{user `build`}}"
    }
  }
  ],
  "provisioners": [
  {
    "type": "file",
    "source": "nubis/nubis-puppet.tar.gz",
    "destination": "/tmp/nubis-puppet.tar.gz"
  },
  {
    "type": "shell",
    "script": "nubis/bin/packer-bootstrap"
  },
  {
    "type": "puppet-masterless",
    "manifest_dir": "nubis/nubis-puppet/puppet/manifests",
    "manifest_file": "nubis/nubis-puppet/puppet/manifests/init.pp",
    "module_paths": ["nubis/nubis-puppet"]
  },
  {
      "type": "file",
      "source": "nubis/bin/consul-autojoin.sh",
      "destination": "/tmp/autojoin.sh"
  },
  {
      "type": "shell",
      "inline" : [
        "sudo mv /tmp/autojoin.sh /etc/rc.local",
        "sudo chmod +x /etc/rc.local"
      ]
  }
  ]
}
