{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "release": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-us-west-2",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-3d50120d",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-base v{{user `release`}}",
    "ami_description": "Nubis - Base",
    "ami_regions" : [ "eu-west-1","us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}"
    }
  }
  ],
  "provisioners": [
  {
    "type": "shell",
    "inline": [
      "sleep 30",
      "test -f /etc/debian_version && wget -O /tmp/puppetlabs-release-precise.deb https://apt.puppetlabs.com/puppetlabs-release-precise.deb && sudo dpkg -i /tmp/puppetlabs-release-precise.deb",
      "test -f /etc/redhat_release && sudo rpm -ivh http://yum.puppetlabs.com/puppetlabs-release-el-6.noarch.rpm",
      "sudo apt-get update || sudo yum -y update",
      "sudo apt-get -y upgrade || sudo yum -y upgrade",
      "sudo apt-get -y install puppet=3.7.3-1puppetlabs1 || sudo yum -y install puppet-3.7.3-1",
      "sudo apt-get -y install build-essential || sudo yum -y groupinstall 'Development tools'",
      "sudo apt-get -y install ruby-dev || sudo yum -y install ruby-devel",
      "sudo gem install librarian-puppet"]
  }
  ]
}
